<% layout('./layouts/boilerplate') -%>
<% block('head').append(`<title>${campground.title} Details</title> <link rel="stylesheet" type="text/css" href="/css/starability-checkmark.css"/>`) %>

<div class="row mb-3 justify-content-center">
    <div class="col-lg-5 ">
        <div class="card">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %> </h5>
              <h6 class="card-subtitle mb-2 text-muted">Submitted by <%= campground.author.username %> </h6>
              <p class="card-text"> <%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Location: <%= campground.location.city + ", "+ campground.location.state %></li>
              <li class="list-group-item">Price: $<%= campground.price.toFixed(2) %>/night</li>
            </ul>
            <% if (currentUser && (currentUser.username === campground.author.username)) { %>
                <div class="card-body ">
                    <div class="row justify-content-center">
                        <div class="col d-flex justify-content-center">
                            <a class="btn btn-primary" role="button"href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <form action ="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                                <button class="btn btn-danger" type="submit"> Delete Campground</button></form>
                        </div>
                    </div>
                   
                    
                </div>
            <% } %>
            
        </div>
    </div>

    <div class="col-lg-5">
        <h4>Leave a review!</h4>
        <form action="/campgrounds/<%=campground._id%>/reviews" method="post" class="needs-validation mb-3" novalidate>
            <!-- <label for="rating" class="form-label">Rating</label> -->
            <div class="row">
                <div class="col-10 mb-2">
                    <fieldset class="starability-checkmark">
                        <legend>Rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                   
                    <!-- <input type="range" name="review[rating]" class="form-range" min="0" max="5" step="0.5" id="rating"> -->
                </div>
                
            </div>
            
            <div class="mb-3">
                <textarea name="review[body]" class="form-control" id="body" cols="30" rows="3" placeholder="Enter review" required></textarea> 
                <div class="valid-feedback">All good!</div>
                <div id="bodyHelp" class="invalid-feedback">Please enter a a review.</div>
            </div>
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
        <div class="row">
            <h4>Reviews</h4>
            <% campground.reviews.forEach(review => { %>
                <div class="col-12">
                    <div class="card mb-1">
                        <div class="card-body">
                            <h5 class="card-title starability-result" data-rating= "<%= review.rating %>">Rating: <%= review.rating %> stars</h5>
                            <h6 class="card-subtitle mb-2 text-muted">by <%= review.author.username %> </h6>
                            <p class="card-text"><%= review.body %></p>
                        </div>
                        <% if (currentUser && review.author.equals(currentUser._id)) { %>
                       <div class="card-footer">
                           <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete Review</button></form>
                       </div>
                       <% } %>
                    </div>
                    
                </div>
            <% }); %>
        </div>
        
    </div>
</div>



