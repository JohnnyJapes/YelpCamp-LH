<% layout('./layouts/boilerplate') -%>
<% block('head').append(`<title>${campground.title} Details</title>`) %>

<div class="row mb-3 justify-content-center">
    <div class="col-lg-5 ">
        <div class="card">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %> </h5>
              <p class="card-text"> <%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Location: <%= campground.location.city + ", "+ campground.location.state %></li>
              <li class="list-group-item">Price: $<%= campground.price.toFixed(2) %>/night</li>
            </ul>
            <div class="card-body ">
                <div class="row justify-content-center">
                    <div class="col d-flex justify-content-center">
                        <a class="btn btn-primary" role="button"href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
                    </div>
                    <div class="col d-flex justify-content-center">
                        <form action ="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger" type="submit"> Delete Campground</button></form>
                    </div>
                </div>
               
                
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <h4>Leave a review!</h4>
        <form action="/campgrounds/<%=campground._id%>/reviews" method="post" class="needs-validation mb-3" novalidate>
            <label for="rating" class="form-label">Rating</label>
            <div class="row">
                <div class="col-1 text-center">
                    0
                </div>
                <div class="col-10">
                    <input type="range" name="review[rating]" class="form-range" min="0" max="5" step="0.5" id="rating">
                </div>
                <div class="col-1 text-center">
                    5
                </div>
            </div>
            
            <div class="mb-3">
                <textarea name="review[body]" class="form-control" id="body" cols="30" rows="3" placeholder="Enter review" required></textarea> 
                <div class="valid-feedback">All good!</div>
                <div id="bodyHelp" class="invalid-feedback">Please enter a a review.</div>
            </div>
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
        <div class="row">
            <h4>Reviews</h4>
            <% campground.reviews.forEach(review => { %>
                <div class="col-12">
                    <div class="card mb-1">
                        <div class="card-body">
                            <h5 class="card-title">Rating: <%= review.rating %> stars</h5>
                            <p class="card-text"><%= review.body %></p>
                        </div>
                       <div class="card-footer">
                           <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">Delete Review</button></form>
                       </div>
                    </div>
                    
                </div>
            <% }); %>
        </div>
        
    </div>
</div>



